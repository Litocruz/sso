<%= form_for(@employee, :remote => true, :html => { :class => "form-horizontal"} ) do |f| %>
      <ul class="nav nav-tabs" id="tabs">
          <li class="active">
              <a href="#general">General</a>
          </li>
          <li class="">
              <a href="#address">Direccion</a>
          </li>
          <li class="">
              <a href="#driver_license">Licencia de Conducir</a>
          </li>
          <li class="">
              <a href="#studies">Estudios</a>
          </li>
          <li class="">
              <a href="#notes">Notas</a>
          </li>
      </ul>
      
      <div class="tab-content" id="my-tab-content">
        <!-General !>
        <div id="general" class="tab-pane active">
          <%= render 'fields', f: f %>
        </div>

        <!-Address!>
        <div id="address" class="tab-pane">
          <%= render 'address', f: f %>
        </div>
      
        <!-Driver Licenses !>
        <div id="driver_license" class="tab-pane">
          <%= f.fields_for( :driver_licenses, :remote => true, :html => { :class => "form-horizontal"} ) do |b| %>
            <%= render 'shared/driver_license_form', b: b %>
          <% end %>
        </div>

        <!-Studies !>
        <div id="studies" class="tab-pane">
          <%= f.fields_for( :studies, :remote => true, :html => { :class => "form-horizontal"} ) do |b| %>
            <%= render 'shared/studies_form', b: b %>
          <% end %>
        </div>

        <!-Notes !>
        <div id="notes" class="tab-pane">
          <div class="control-group">
            <label for="notes" class="control-label">Notas</label>
            <div class="controls">
                <%= f.text_area :notes, :class => "input-xlarge", rows:10, cols:100 %>
            </div>
          </div>
          <div class="control-group">
            <label for="phone" class="control-label">Telefono</label>
            <div class="controls">
                <%= f.text_field :phone, :class => "input-xlarge", rows:10, cols:100 %>
            </div>
          </div>
          <div class="control-group">
            <label for="mobile" class="control-label">Celular</label>
            <div class="controls">
                <%= f.text_field :mobile, :class => "input-xlarge", rows:10, cols:100 %>
            </div>
          </div>
        </div>    

        <div class="actions">
            <%= f.submit "Guardar", class: "btn btn-primary" %>            
            <%= link_to :back, :remote => true, :type => "reset", :class => "btn" do%>
                <i class="icon-chevron-left"></i>Cancelar
            <% end %>     
        </div>      
      </div>

      <script type="text/javascript">
          $(function() {
              $('#tabs a').click(function(e) {
                  e.preventDefault();
                  $(this).tab('show');
              })
          })
      </script>
    <% end %> 
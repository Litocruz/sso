<%= render 'shared/error_messages', object: f.object %>
 <div class="control-group">
    <label for="work_schedule" class="control-label">Diagrama de Trabajo</label>
    <div class="controls">
        <%= f.select :work_schedule, ['Lunes a Viernes', '7X3','Domingo a Domingo'], :class => "input-xlarge" %>
    </div>
</div>
<div class="control-group">
    <label for="ppe" class="control-label">EPP</label>
    <div class="controls">
        <%= f.text_field :ppe, :class => "input-xlarge", :maxlength => "50" %>
    </div>
</div>
<div class="control-group">
	<label for="trainer" class="control-label"> Es Entrenador?</label>
	<div class="controls">
	    <%= f.check_box :trainer, {}, 1, 0 %>
	</div>
</div>

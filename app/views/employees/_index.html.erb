<% provide(:title, 'Todos los Empleados') %>

<%# render '/layouts/confirm_modal'%>
<%# will_paginate %>
<%= form_tag  employees_path, :method => 'get', :id => "ajax_search_form" do %>
<div class="page-header">
    <h1 class="pull-left">Empleados</h1>
    <div class="pull-right">
        <%= link_to new_employee_path, :remote => true,
        :class => "btn btn-primary", :style => "margin-right:10px; height:15px;" do%>
            <i class="icon-star icon-white"></i> Nuevo Empleado
        <% end %>

        <div id="quicksearch" class="search-box">
            <%= text_field_tag :search, params[:search], :placeholder => "Search"  %>
        </div>
        <%= hidden_field_tag :ajax_search, "true" %>
    </div>
</div>
<div class="row-fluid">
    <div id="table_div" class="span12">
        <%= hidden_field_tag :direction, params[:direction] %>
        <%= hidden_field_tag :sort, params[:sort] %>
        <table class="table table-striped table-bordered table-condensed sortable">
            <thead>
                <tr>
                    <th style="width: 300px;"><%= sortable "name", "Nombre" %></th>
                    <th> Email </th>
                    <th> Dni </th>
                    <th> Fecha Creacion </th>
                    <th style="width: 40px;"></th>
                </tr>
            </thead>
            <tbody>
                <%= render @employees %>
            </tbody>
                <tfoot>
                    <tr>
                        <td colspan="5" align="center"> <%= will_paginate @employees%> </td>
                    </tr>
                </tfoot>
        </table>
    </div>
</div>
<% end %>
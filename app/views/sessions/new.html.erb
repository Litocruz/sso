<% provide(:title, "Ingresar") %>
<h1>Ingresar</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>
      <%= f.label :document_number %>
      <%= f.text_field :document_number %>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <%= f.submit "Ingresar", class: "btn btn-large btn-primary" %>
    <% end %>
    <p> Nuevo Empleado? <%= link_to "Alta Empleado!", create_path %></p>
  </div>
</div>
